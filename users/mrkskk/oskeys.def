// Functions
OSKEY(SCR_SHOT, KC_PSCREEN, LGUI(S(KC_4)))  // Screenshot

OSKEY(LOCK, LGUI(KC_L), LGUI(C(KC_Q)))        // lock screen
OSKEY(PRV_PGE, LALT(KC_LEFT), LGUI(KC_LEFT))  //
OSKEY(NXT_PGE, LALT(KC_RGHT), LGUI(KC_RGHT))  //
OSKEY(CLOSE, LCTL(KC_W), LGUI(KC_W))
OSKEY(NEWTAB, LCTL(KC_T), LGUI(KC_T))
   //
OSKEY(ALL, LCTL(KC_A),  LGUI(KC_A))
OSKEY(SAVE, LCTL(KC_S),  LGUI(KC_S))
OSKEY(FIND, LCTL(KC_F),  LGUI(KC_F))
OSKEY(REPLACE, LCTL(KC_H),  LGUI(KC_H))
OSKEY(HIDE, LGUI(KC_M), LGUI(KC_H))
OSKEY(SHOW, LGUI(S(KC_M)), LCTL(KC_F3))
OSKEY(BOLD, LCTL(KC_B),  LGUI(KC_B))
OSKEY(ITALIC, LCTL(KC_I),  LGUI(KC_I))
OSKEY(UNDRLINE, LCTL(KC_U),  LGUI(KC_U))

OSKEY(LEFT, LEFT_WIN,  LEFT_MAC)
OSKEY(RIGHT, RIGHT_WIN,  RIGHT_MAC)

OSKEY(GSEARCH, C(KC_L), G(KC_L))
